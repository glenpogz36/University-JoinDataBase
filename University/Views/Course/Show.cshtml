@{
  Layout = "_Layout";
}
<hr>
<h1>Course details:</h1>

<li>ID: @Model["course"].GetId()</li>
<li>Course name: @Model["course"].GetName()</li>
<li>description: @Model["course"].GetDescription()</li>

<hr>

<h1>This Course is assigned in the following students:</h1>
@foreach(var student in Model["students"])
{
    <li>@student.GetName()</li>
}

<p>Add an additional student to this course:</p>


<form action="/courses/@Model["course"].GetId()" method="post">
    <select name="studentId" >
            @foreach(var student in @Model["allStudents"])
            {
                <option class="dropdown-item"value=@student.GetId()>@student.GetName()</option>
            }
    </select>
     <button class="btn btn-primary btn-md" type="submit">Add</button>
</form>

<hr>

<p>Remove a student from this course:</p>


<form action="/courses/@Model["course"].GetId()/delete" method="post">
    <select name="studentId" >
            @foreach(var student in @Model["students"])
            {
                <option class="dropdown-item"value=@student.GetId()>@student.GetName()</option>
            }
    </select>
     <button class="btn btn-danger btn-md" type="submit">Remove</button>
</form>